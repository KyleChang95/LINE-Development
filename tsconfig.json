{
  /* Visit https://aka.ms/tsconfig.json to read more about this file */
  "compilerOptions": {
    "target": "es2017",
    "lib": ["ES2021.String"],
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "/opt/nodejs/lib/utils/*": ["lib/utils/*"]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "archive-vault/**/*",
    "lib/imsapi/**/*",
    "lib/sdpClient/**/*",
    "**/localExcute.ts",
    "**/__mocks__/**/*"
  ]
}